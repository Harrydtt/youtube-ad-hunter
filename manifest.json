{
  "manifest_version": 3,
  "name": "YouTube Ad Hunter",
  "version": "1.0.0",
  "description": "Tự động skip quảng cáo YouTube nhanh chóng. Bật/Tắt dễ dàng với nút Hunter trên header.",
  "author": "Harry",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ]
}