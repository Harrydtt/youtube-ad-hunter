{
  "manifest_version": 3,
  "name": "YouTube Ad Hunter v44",
  "version": "44.5",
  "description": "Modular Architecture: Manager - Surgeon - Sniper - Janitor",
  "permissions": [
    "scripting",
    "storage",
    "offscreen",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlesyndication.com/*",
    "*://*.googleads.g.doubleclick.net/*",
    "*://*.doubleclick.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "inject.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "manager.js",
        "sniper.js",
        "cleaner.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "offscreen.html"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ]
}